<%- include('../partials/header'); -%> <%- include('../partials/navbar2'); -%>

<!-- link css -->
<link rel="stylesheet" href="/styles/SignUp.css" />
<link rel="stylesheet" type="text/css" href="/styles/settings.css" />
<link rel="stylesheet" type="text/css" href="/styles/sidebar.css" />
<title>weCode | Settings</title>

<body>
  <%- include('../partials/sidebar'); -%>
  <section class="mainn-container">
    <h2 class="account-settings_header">Account Settings</h2>
    <p class="account-settings_subtext">
      View and update your account details, profile and more.
    </p>

    <!-- basic info -->
    <div class="info_container">
      <div class="info_top">
        <h4 class="info_header">Basic Info</h4>
      </div>

      <!-- basic info: name and pfp section -->
      <div class="info_bottom">
        <!-- basic info bottom left: name -->
        <div class="info_bottom-left">
          <!-- first name -->
          <label class="info_label" for="fname">First Name</label>
          <input
            class="info_input"
            type="text"
            name="fname"
            id="fname"
            placeholder="Fatimah"
          />
          <!-- last name -->
          <label class="info_label lname" for="fname">Last Name</label>
          <input
            class="info_input"
            type="text"
            name="fname"
            id="fname"
            placeholder="Oladigbolu"
          />
        </div>
      </div>
    </div>

    <!-- login info -->
    <div class="info_container">
      <div class="info_top">
        <h4 class="info_header">Login Info</h4>
      </div>

      <!-- login info account email section -->
      <div class="info_bottom login-bottom">
        <!-- login account email section bottom -->
        <div class="info_bottom-left">
          <!-- account email -->
          <label class="info_label" for="accemail">Account Email</label>
          <input
            class="info_input"
            type="email"
            name="fname"
            id="fname"
            placeholder="foladigbolu@gmail.com"
          />
        </div>

        <!-- login account email: confirmed -->
        <div class="info_bottom-right login-bottom_accemail-confirmed">
          <i class="fa-solid fa-check"></i>
          <p class="accemail-confirmed">Confirmed</p>
        </div>
      </div>

      <!-- login password section -->
      <div class="info_bottom login-bottom_password">
        <!-- login password section bottom -->
        <div class="info_bottom-left">
          <!-- password -->
          <label class="info_label" for="password">Password</label>
          <input
            class="info_input"
            type="password"
            name="fname"
            id="fname"
            placeholder="**********"
          />
        </div>

        <!-- login account email: confirmed -->
        <div class="info_bottom-right">
          <button class="edit-password_btn">
            <a href="/changepassword">Edit Password</a>
          </button>
        </div>
      </div>
    </div>

    <!-- email notification settings -->
    <div class="info_container">
      <div class="info_top">
        <h4 class="info_header">Email Notification Settings</h4>
        <p class="control-what-emails">Control what emails to receive.</p>
      </div>

      <!-- promotions container top -->
      <div class="info_bottom promotions-container promotions-box_top">
        <div class="promotions-box">
          <p class="promotions-box_text">Promotions</p>
          <i class="fa-solid fa-circle-check"></i>
        </div>

        <div class="promotions-box">
          <p class="promotions-box_text">Promotions</p>
          <i class="fa-solid fa-circle-check"></i>
        </div>
      </div>
    </div>

    <!-- language -->
    <div class="info_container">
      <div class="info_top">
        <h4 class="info_header">Language</h4>
      </div>

      <!-- promotions container top -->
      <div class="info_bottom">
        <select value="languages" id="languages">
          <option value="French">English</option>
          <option value="Igbo">Igbo</option>
          <option value="Yoruba">Yoruba</option>
          <option value="Hausa">Hausa</option>
        </select>
      </div>
    </div>

    <!-- delete account -->
    <div class="info_container delete-account_container">
      <div class="info_top">
        <h4 class="info_header">Delete Account</h4>
      </div>

      <!-- delete account bottom container -->
      <div class="info_bottom login-bottom_password delete-account_container">
        <!-- delete account bottom left -->
        <div class="info_bottom-left">
          <p class="delete-account_text delete-account_text-top">
            Deleting your account is a permanent action.
          </p>
          <p class="delete-account_text delete-account_text-bottom">
            You would lose all details and cannot access your sites anymore.
          </p>
        </div>

        <!-- login account email: confirmed -->
        <div class="info_bottom-right">
          <button class="edit-password_btn delete-account_btn">
            <a href="">Delete Account</a>
          </button>
        </div>
      </div>
    </div>

    <button" class="save-changes"><a href="/settings">Save Changes</a></button>
  </section>

  <!-- link javascript -->
  <script src="/js/sidebar.js"></script>
  <!-- link fontawesome -->
<script
src="https://kit.fontawesome.com/51e04b70b4.js"
crossorigin="anonymous"
></script>
</body>
