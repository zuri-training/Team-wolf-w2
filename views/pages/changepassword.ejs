<head>
  <title>weCode | Change Password</title>
  <link rel="stylesheet" href="/styles/SignUp.css" />
  <!-- add fontawesome -->
  <script
    src="https://kit.fontawesome.com/51e04b70b4.js"
    crossorigin="anonymous"
  ></script>
</head>

<body>
  <a class="navbar-brand" href="/">
    <img src="images/weCode.png" alt="" />
  </a>
  <div class="sign-up_container container">
    <!-- left/form section of the sign-up container -->
    <div class="sign-up_form login_form">
      <h1 class="sign-up_header">Change Your Password</h1>
      <!-- form -->
      <form action="/login" method="post">
        <!-- username -->
        <label for="username">Username</label>
        <input type="text" name="username" placeholder="username" />
        <label for="password">Old Password</label>
        <input
          type="password"
          name="oldpassword"
          placeholder="Enter Old password"
        />
        <label for="password">New Password</label>
        <input
          type="password"
          name="newpassword"
          placeholder="Enter New password"
        />
        <!-- login button -->
        <input type="submit" class="login_btn" value="Change Password" />
        <!-- forgot password -->
        <label for="btn forgot-pass" class="agree-terms forgot-pass"
          >Forgot password?</label
        >
      </form>

      <!-- login options -->

      <div class="login-options_icons">
        <i class="fa-brands fa-facebook login-icon"></i>
        <a href="/google"><i class="fa-brands fa-google login-icon"></i></a>
        <i class="fa-brands fa-apple login-icon"></i>
        <i class="fa-brands fa-twitter login-icon"></i>
      </div>
      <p class="login-options">or login with</p>
    </div>

    <!-- right/image section of the sign-up container -->
    <div class="sign-up_img"></div>
  </div>
</body>
