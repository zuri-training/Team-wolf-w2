<link rel="stylesheet" href="/styles/signup.css" />
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>weCode | resetpassword</title>
  <link rel="stylesheet" href="/styles/SignUp.css" />
  <!-- add fontawesome -->
  <script
    src="https://kit.fontawesome.com/51e04b70b4.js"
    crossorigin="anonymous"
  ></script>
</head>

<body>
  <div class="sign-up_container container">
    <!-- left/form section of the sign-up container -->
    <div class="sign-up_form login_form">
      <!-- logo -->
      <aside class="signup-logo_container">
        <a href="/"
          ><img
            class="sign-up_logo"
            src="images/weCodeLogo.png"
            alt="weCode Logo"
        /></a>
      </aside>

      <h1 class="sign-up_header">Log in</h1>
      <h4 class="sign-up_subtext">
        <a href="/register"
          >`Don't have an account yet?
          <span class="log-in_span">Sign up</span></a
        >
      </h4>

      <form action="/resetpassword" method="post" class="">
        <label for="username">Username</label>
        <input type="text" name="username" placeholder="username" />
        <label for="password">New Password</label>
        <input
          type="password"
          name="password"
          placeholder="Enter New password"
        />
        <input
          type="submit"
          class="login_btn"
          value="Submit"
          style="margin-top: 20px"
        />
      </form>
    </div>

    <!-- right/image section of the sign-up container -->
    <div class="sign-up_img"></div>
  </div>
</body>
